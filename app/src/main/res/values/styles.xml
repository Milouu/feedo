<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:textSize">10sp</item>
        <item name="android:fontFamily">@font/montserrat</item>
    </style>
    <style name="BigTitle">
        <item name="android:textSize">19sp</item>
        <item name="android:fontFamily">@font/montserrat_bold</item>
    </style>
    <style name="MediumTitle">
        <item name="android:textSize">19sp</item>
        <item name="android:fontFamily">@font/montserrat_semibold</item>
    </style>
    <style name="PageWrapper">
        <item name="android:paddingLeft">23dp</item>
        <item name="android:paddingRight">23dp</item>
        <item name="android:orientation">vertical</item>
    </style>

</resources>
